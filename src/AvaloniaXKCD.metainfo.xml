<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <metadata_license>MIT</metadata_license>

  <id>${APP_ID}</id>
  <name>${APP_FRIENDLY_NAME}</name>
  <summary>${APP_SHORT_SUMMARY}</summary>
  <url type="homepage">${PUBLISHER_LINK_URL}</url>
  <project_license>${APP_LICENSE_ID}</project_license>
  <content_rating type="oars-1.1" />

  <developer id="${PUBLISHER_ID}">
    <name>${PUBLISHER_NAME}</name>
  </developer>

  <launchable type="desktop-id">${APP_ID}.desktop</launchable>

  <description>
        ${APPSTREAM_DESCRIPTION_XML}
    </description>

  <categories>
    <category>${PRIME_CATEGORY}</category>
  </categories>

  <!-- You can add keywords for your app to be discovered in software centers -->
  <keywords>
    <keyword>xkcd</keyword>
    <keyword>comics</keyword>
  </keywords>

  <!-- You can add screenshots of your application -->
  <!--
    <screenshots>
        <screenshot type="default">
            <image>https://path.to/your/screenshot.png</image>
        </screenshot>
    </screenshots>
    -->

  <releases>
        ${APPSTREAM_CHANGELOG_XML}
    </releases>
</component>
