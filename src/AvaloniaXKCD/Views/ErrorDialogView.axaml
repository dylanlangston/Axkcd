<UserControl
    x:Class="AvaloniaXKCD.Views.ErrorDialogView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:CompileBindings="True"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AvaloniaXKCD.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ErrorDialogViewModel"
    mc:Ignorable="d">
    <StackPanel MinWidth="300" MaxWidth="500">
        <TextBlock
            HorizontalAlignment="Stretch"
            TextWrapping="WrapWithOverflow"
            Text="Error"
            ToolTip.Tip="Title" />
        <TextBlock
            HorizontalAlignment="Stretch"
            TextWrapping="WrapWithOverflow"
            ToolTip.Tip="Error"
            Text="{Binding ErrorText}" />
        <WrapPanel HorizontalAlignment="Right">
            <Button Command="{Binding Quit}">
                Quit
            </Button>
            <Button
                Command="{Binding Continue}"
                IsEnabled="{Binding CanContinue}">
                Continue
            </Button>
        </WrapPanel>
    </StackPanel>
</UserControl>