<UserControl
    x:Class="AvaloniaXKCD.Views.NavigationControlsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="This"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    mc:Ignorable="d">
    <WrapPanel HorizontalAlignment="Center">
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.GetFirstCommand}">|&lt;</Button>
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.GetPreviousCommand}">&lt; Prev</Button>
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.GetRandomCommand}">Random</Button>
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.ExplainCommand}">Explain</Button>
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.OpenDialogCommand}">Go To</Button>
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.GetNextCommand}">Next &gt;</Button>
        <Button IsEnabled="{Binding #This.Enabled}" Command="{Binding #This.GetLastCommand}">&gt;|</Button>
    </WrapPanel>
</UserControl>