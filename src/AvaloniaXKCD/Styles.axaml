<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    x:CompileBindings="True">
    <FluentTheme DensityStyle="Compact">
        <FluentTheme.Palettes>
            <ColorPaletteResources
                x:Key="Light"
                Accent="{StaticResource BackgroundColorValue}"
                AltHigh="{StaticResource ContentBackgroundColorValue}"
                BaseHigh="{StaticResource TextColorValue}"
                ChromeBlackMedium="{StaticResource BorderColorValue}"
                RegionColor="{StaticResource BackgroundColorValue}" />
        </FluentTheme.Palettes>
    </FluentTheme>
    <dialogHostAvalonia:DialogHostStyles />
    <StyleInclude Source="avares://AsyncImageLoader.Avalonia/AdvancedImage.axaml" />
    <StyleInclude Source="/Styles/Button.axaml" />
    <StyleInclude Source="/Styles/NumericUpDown.axaml" />
    <StyleInclude Source="/Styles/ProgressBar.axaml" />
</Styles>
